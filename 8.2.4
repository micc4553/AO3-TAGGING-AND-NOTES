            try {
                const labels = Storage.loadLabels();
                const notes = Storage.loadNotes();
                const works = Object.keys(labels).filter(id => labels[id] === tag);

                if (works.length === 0) {
                    this.content.innerHTML = `<div>No works found for tag "${tag}"</div>`;
                    return;
